        <h1>Sphere Volume Calculator</h1>
        <label for="radiusInput">Enter the radius of the sphere:</label>
        <input type="number" id="radiusInput" placeholder="Enter radius" />
        <button onclick="calculateVolume()">Calculate</button>
        <div id="result"></div>
